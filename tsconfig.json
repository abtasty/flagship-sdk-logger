{
    "compilerOptions": {
        "outDir": "dist",
        "module": "commonjs",
        "target": "es5",
        "strict": true,
        "sourceMap": true,
        "declaration": true,
        "esModuleInterop": true,
        "removeComments": true,
        "jsx": "preserve",
        "noUnusedLocals": true,
        "moduleResolution": "node",
        "typeRoots": ["index.d.ts", "node_modules/@types"]
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules", "**/*.test.ts"],
    "awesomeTypescriptLoaderOptions": {
        "silent": true
    },
    "lib": ["es6", "es2017.object"]
}
